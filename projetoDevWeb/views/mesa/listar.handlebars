<h2>Lista de Mesas</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Capacidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each mesas}}
        <tr>
            <td>{{id}}</td>
            <td>{{numero}}</td>
            <td>{{capacidade}} pessoas</td>
            <td>
                <a class="btn" href="/mesa/editar/{{id}}">Editar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<a class="btn" href="/mesa/cadastrar">Cadastrar Mesa</a>
