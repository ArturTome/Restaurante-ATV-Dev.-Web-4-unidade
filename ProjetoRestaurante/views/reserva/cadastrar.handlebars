<h1>Cadastrar Reserva</h1>

<form action="/reserva/cadastrar" method="POST">
  <label>Cliente:</label>
  <select name="cliente_id" required>
    {{#each clientes}}
    <option value="{{id}}">{{nome}}</option>
    {{/each}}
  </select><br>

  <label>Mesa:</label>
  <select name="mesa_id" required>
    {{#each mesas}}
    <option value="{{id}}">Mesa {{numero}} ({{lugares}} lugares)</option>
    {{/each}}
  </select><br>

  <label>Data da Reserva:</label>
  <input type="datetime-local" name="data_reserva" required><br>

  <button type="submit">Cadastrar</button>
</form>

<a href="/reserva">Voltar</a>
